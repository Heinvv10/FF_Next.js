# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Neon Database Configuration
NEON_DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require
NEON_POOL_QUERY_LIMIT=1000

# Clerk Authentication (Required)
CLERK_SECRET_KEY=your_clerk_secret_key
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key

# Arcjet Security (Optional - for bot protection & rate limiting)
# Sign up for free at https://arcjet.com
ARCJET_KEY=ajkey_your_arcjet_key_here

# Next.js Public Environment Variables
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Server Configuration
USE_LEGACY_SERVER=false
PORT=3000

# Development & Debugging
AUTH_BYPASS=false
LOG_LEVEL=info
NODE_ENV=development

# Optional: Analytics
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=

# Optional: External Services
NEXT_PUBLIC_SENTRY_DSN=
OPENAI_API_KEY=
REDIS_URL=

# Optional: Feature Flags
NEXT_PUBLIC_ENABLE_PWA=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=false

# WAHA WhatsApp API (for ticketing notifications)
WAHA_API_URL=https://waha.example.com
WAHA_API_KEY=your_waha_api_key
WAHA_SESSION_NAME=default
WAHA_TIMEOUT_MS=30000
WAHA_RETRY_ATTEMPTS=3

# QContact Integration (for ticketing sync)
QCONTACT_API_URL=https://api.qcontact.example.com
QCONTACT_API_KEY=your_qcontact_api_key
QCONTACT_SYNC_INTERVAL_MS=60000
QCONTACT_WEBHOOK_SECRET=your_webhook_secret

# Firebase Storage (for ticketing attachments)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_STORAGE_BUCKET=your_storage_bucket.appspot.com
FIREBASE_CLIENT_EMAIL=your_service_account@project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----"